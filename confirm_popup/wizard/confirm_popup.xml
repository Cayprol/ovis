<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="confirm_popup_form">
			<field name="model">confirm.popup</field>
			<field name="name">confirm.popup.form</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<field name="note" nolabel="1" placeholder="Enter reason for this action."/>
					</group>

					<footer>
						<button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
						<button string="_Cancel" class="btn-secondary" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>
	</data>
</odoo>